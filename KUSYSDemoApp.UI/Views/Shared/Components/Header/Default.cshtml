<div id="kt_header" class="kt-header kt-grid kt-grid--ver  kt-header--fixed">

    <!-- begin:: Aside-->
    <div class="kt-header__brand kt-grid__item">
        <div class="kt-header__brand-logo">
            <a href="">
                <img alt="KUSYSLogo" src="~/assets/media/logo/KUSYSLogo.jpeg" style="width:100%" />
            </a>
        </div>
    </div>

    <!-- end:: Aside -->
    <!-- begin:: Title -->
    <h3 class="kt-header__title kt-grid__item">
        KUSYS Demo Uygulaması
    </h3>

    <!-- end:: Title -->
    <!-- begin:: Header Menu -->
    <button class="kt-header-menu-wrapper-close" id="kt_header_menu_mobile_close_btn"><i class="la la-close"></i></button>
    <div class="kt-header-menu-wrapper kt-grid__item kt-grid__item--fluid" id="kt_header_menu_wrapper"></div>

    <!-- end:: Header Menu -->
    <!-- begin:: Header Topbar -->
    <div class="kt-header__topbar">

        <!--begin: User bar -->
        <div class="kt-header__topbar-item kt-header__topbar-item--user">
            <div class="kt-header__topbar-wrapper" data-toggle="dropdown" data-offset="10px,0px">
                <span class="kt-header__topbar-icon kt-hidden-"><i class="flaticon2-user-outline-symbol"></i></span>
            </div>

            <div class="dropdown-menu dropdown-menu-fit dropdown-menu-right dropdown-menu-anim dropdown-menu-xl">

                <!--begin: Head -->
                <div class="kt-user-card kt-user-card--skin-dark kt-notification-item-padding-x" style="background-image: url(assets/media/misc/bg-1.jpg)">
                    <div class="kt-user-card__avatar">
                        <span class="kt-badge kt-badge--lg kt-badge--rounded kt-badge--bold kt-font-success"> @ViewBag.UserNameFirstLetter </span>
                    </div>

                    <div class="kt-user-card__name">
                        @ViewBag.UserName @ViewBag.UserSurname
                    </div>
                </div>

                <!--end: Head -->
                <!--begin: Navigation -->
                <div class="kt-notification">
                    <div class="kt-notification__custom kt-space-between">
                        <a href="@Url.Action("Logout", "Login")" class="btn btn-label btn-label-danger btn-sm btn-bold"> Çıkış Yap </a>
                    </div>
                </div>

                <!--end: Navigation -->
            </div>
        </div>

        <!--end: User bar -->
    </div>

    <!-- end:: Header Topbar -->
</div>